<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sunshine.com.broadcastandservice.MainActivity">

    <Button
        android:id="@+id/bt_bind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定服务" />

    <Button

        android:id="@+id/bt_regist_screen_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册屏幕广播接收者"
        android:layout_below="@+id/bt_bind_service"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        android:id="@+id/bt_send_orderbroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送有序广播"
        android:layout_below="@+id/bt_regist_screen_broadcast"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp" />

    <Button
        android:id="@+id/bt_unregist_screen_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销屏幕广播接收者"
        android:layout_below="@+id/bt_regist_screen_broadcast"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
